@model List<WearAndShare.Models.Feedback>
@{
    ViewBag.Title = "Feedback List";
    Layout = "~/Views/Shared/_LayoutPublicPage.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card" style="margin-bottom:25px;">
                <div class="card-body">
                    <h4 class="card-title">Danh sách tin nhắn phản hồi</h4>
                    <p>
                        <a href="@Url.Action("Create", "Feedback")">Tạo phản hồi</a>
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(x => x[0].FromUserName)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(x => x[0].ToUserName)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(x => x[0].Message)
                            </th>
                            <th>
                                @Html.DisplayNameFor(x => x[0].Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(x => x[0].SendDate)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(x => item.FromUserName)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(x => item.ToUserName)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(x => item.Message)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => item.SendDate)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Details", "Details", new { id = item.Id })*@
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
